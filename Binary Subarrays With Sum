class Solution {
public:
    int numSubarraysWithSum(vector<int>& nums, int goal) {
        int ans = 0;
        for(int i = 0 ; i< nums.size() ; i++){
            int temp = 0;
            temp += nums[i];
            if(temp == goal)ans++;
            for(int j = i+1 ; j<nums.size() ; j++){
                temp += nums[j];
                if(temp == goal)ans++;
                else if(temp > goal)break;
            }
        }
        return ans;
    }
};
