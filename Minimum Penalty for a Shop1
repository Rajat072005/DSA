class Solution {
public:
    int bestClosingTime(string customers) {
        int n = customers.size();
        int penalty = 0;

        // Initial penalty: all 'Y' (closing at time 0)
        for (char c : customers)
            if (c == 'Y') penalty++;

        int minPenalty = penalty;
        int ans = 0;

        for (int i = 0; i < n; i++) {
            if (customers[i] == 'Y') penalty--; // now served
            else penalty++; // 'N' before closing causes penalty

            if (penalty < minPenalty) {
                minPenalty = penalty;
                ans = i + 1;
            }
        }
        return ans;
    }
};
